# Multi-stage build for docker-compose
# Stage 1: Build the binary
FROM golang:1.25 AS builder

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY cmd/ ./cmd/
COPY internal/ ./internal/
COPY web/ ./web/
COPY bootloaders/ ./bootloaders/
COPY main.go .

# Build binary
ARG VERSION=dev
ARG TARGETOS=linux
ARG TARGETARCH
RUN CGO_ENABLED=1 GOOS=${TARGETOS} GOARCH=${TARGETARCH} go build \
    -a -ldflags="-w -s -X bootimus/cmd.version=${VERSION}" \
    -o bootimus .

# Stage 2: Install wimlib-tools
FROM debian:13-slim AS wimlib-installer

RUN apt-get update && apt-get install -y --no-install-recommends \
    wimtools \
    && rm -rf /var/lib/apt/lists/*

# Stage 3: Runtime
FROM gcr.io/distroless/base-debian13

COPY --from=builder /build/bootimus /bootimus
COPY --from=wimlib-installer /usr/bin/wim* /usr/bin/
COPY --from=wimlib-installer /usr/lib/*/libwim.so* /usr/lib/
COPY --from=wimlib-installer /usr/lib/*/libxml2.so* /usr/lib/
COPY --from=wimlib-installer /usr/lib/*/libicuuc.so* /usr/lib/
COPY --from=wimlib-installer /usr/lib/*/libicudata.so* /usr/lib/

EXPOSE 69/udp 8080/tcp 8081/tcp

USER root

VOLUME [ "/data" ]
ENTRYPOINT ["/bootimus"]
CMD ["serve"]
